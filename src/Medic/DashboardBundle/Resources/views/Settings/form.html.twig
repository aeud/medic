{% extends 'MedicDashboardBundle::layout.html.twig' %}
{% block body %}
{{ parent() }}
<div class="page-header">
  <h1>Settings</h1>
  <h2>Holidays</h2>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <a href="{{ path('home') }}" class="btn btn-default"><i class="fa fa-long-arrow-left"></i></a>
    <a href="{{ path('settings_slots') }}" class="btn btn-default"><i class="fa fa-th"></i></a>
  </div>
</div>
<div>
  <form class="form-horizontal" role="form" action="{{ path('settings_holidays_post') }}" method="POST">
    <div class="form-group">
      <label for="title" class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="title" name="form[title]" value="{{ holiday is defined ? holiday.title }}" required>
      </div>
    </div>
    <div class="form-group">
      <label for="start" class="col-sm-2 control-label">Start</label>
      <div class="col-sm-5">
        <input type="date" class="form-control" id="start" name="form[start]" value="{{ holiday is defined ? holiday.start | date('Y-m-d') }}" required>
      </div>
      <div class="col-sm-5">
        <input type="time" class="form-control" id="startt" name="form[startt]" value="{{ holiday is defined ? holiday.start | date('H:i:s') }}" required>
      </div>
    </div>
    <div class="form-group">
      <label for="end" class="col-sm-2 control-label">End</label>
      <div class="col-sm-5">
        <input type="date" class="form-control" id="end" name="form[end]" value="{{ holiday is defined ? holiday.start | date('Y-m-d') }}" required>
      </div>
      <div class="col-sm-5">
        <input type="time" class="form-control" id="endt" name="form[endt]" value="{{ holiday is defined ? holiday.start | date('H:i:s') }}" required>
      </div>
    </div>
    <input type="hidden" name="form[id]" value="{{ holiday is defined ? holiday.id }}">
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default btn-block">Post</button>
      </div>
    </div>
  </form>
</div>
{% endblock %}
