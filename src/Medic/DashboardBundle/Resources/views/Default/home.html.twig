{% block body %}
<header>
	<div class="power-off">
		<a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i></a>
	</div>
	<div class="profile">
		<div class="avatar">
			<img src="http://placehold.it/40x40" alt="{{ app.user.username }}" class="img-rounded" width="40">
		</div>
		<div class="infos">
			<div class="username">
				Hi {{ app.user.username }}
			</div>
			<div class="to-profile">
				<a href="{{ path('settings') }}"><i class="fa fa-cog"></i> settings</a>
			</div>
		</div>
	</div>
</header>
<div class="page-header">
	<h1>Week {{ from | date ('W') }}</h1>
	<h2>{{ from | date ('d/m/Y') }} - {{ from | date_modify ('+4 days') | date ('d/m/Y') }}</h2>
</div>
<div class="control">
	<div class="btn-toolbar pull-right" role="toolbar">
		<div class="btn-group">
			<a href="{{ path('home') }}" class="btn btn-default">Today</a>
		</div>
		<div class="btn-group">
			<a href="{{ path('home', {'week': week - 1, 'year': year}) }}" class="btn btn-default"><i class="fa fa-angle-left"></i></a>
			<a href="{{ path('home', {'week': week + 1, 'year': year}) }}" class="btn btn-default"><i class="fa fa-angle-right"></i></a>
		</div>
	</div>
	<div class="btn-toolbar" role="toolbar">
		<div class="btn-group">
			<a href="{{ path('event_new', {'hash': calendar.hash}) }}" class="btn btn-default">+ New event</a>
		</div>
		<div class="btn-group">
			<a href="{{ path('home') }}" class="btn btn-default"><i class="fa fa-calendar-o"></i></a>
		</div>
	</div>
</div>
