{% block body %}
<header>
	<div class="power-off pull-right">
		<a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i></a>
	</div>
</header>
<div class="page-header">
	<h1>Week {{ from | date ('W') }}</h1>
	<h2>{{ from | date ('d/m/Y') }} - {{ from | date_modify ('+4 days') | date ('d/m/Y') }}</h2>
</div>
<div class="control">
	<div class="btn-toolbar pull-right" role="toolbar">
		<div class="btn-group">
			<a href="{{ path('home') }}" class="btn btn-default">Today</a>
		</div>
		<div class="btn-group">
			<a href="{{ path('home', {'from': from | date_modify ('-1 week') | date ('Y-m-d')}) }}" class="btn btn-default"><i class="fa fa-angle-left"></i></a>
			<a href="{{ path('home', {'from': from | date_modify ('+1 week') | date ('Y-m-d')}) }}" class="btn btn-default"><i class="fa fa-angle-right"></i></a>
		</div>
	</div>
	<div class="btn-toolbar" role="toolbar">
		<div class="btn-group">
			<a href="{{ path('event_new', {'hash': calendar.hash}) }}" class="btn btn-default">+ New event</a>
		</div>
		<div class="btn-group">
			<a href="{{ path('home') }}" class="btn btn-default"><i class="fa fa-calendar-o"></i></a>
		</div>
	</div>
</div>
