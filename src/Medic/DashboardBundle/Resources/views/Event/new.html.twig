{% extends '::base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets '@MedicDashboardBundle/Resources/public/css/main.css' filter='cssrewrite' %}
	<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block body %}
<header>
	<div class="power-off pull-right">
		<a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i></a>
	</div>
</header>
<div class="page-header">
	<h1>New event</h1>
</div>
<div>
	<form class="form-horizontal" role="form" action="{{ path('event_new', {'hash': hash}) }}" method="POST">
		<div class="form-group">
			<div class="col-sm-12">
				<a href="{{ path('home') }}" class="btn btn-default"><i class="fa fa-long-arrow-left"></i></a>
				<button type="submit" class="btn btn-danger">SAVE</button>
			</div>
		</div>
		<div class="form-group">
			<label for="titleInput" class="col-sm-2 control-label">Title</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="titleInput" name="title" value="Untitled">
			</div>
		</div>
		<div class="form-group">
			<label for="startInput" class="col-sm-2 control-label">Start</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" id="startInput" name="start" placeholder="2014-12-01">
			</div>
			<div class="col-sm-1">
				<select type="text" class="form-control" id="startHoursInput" name="starth">
					<option>00</option>
					<option>01</option>
					<option>02</option>
					<option>03</option>
					<option>04</option>
					<option>05</option>
					<option>06</option>
					<option>07</option>
					<option>08</option>
					<option selected>09</option>
					<option>10</option>
					<option>11</option>
					<option>12</option>
					<option>13</option>
					<option>14</option>
					<option>15</option>
					<option>16</option>
					<option>17</option>
					<option>18</option>
					<option>19</option>
					<option>20</option>
					<option>21</option>
					<option>22</option>
					<option>23</option>
				</select>
			</div>
			<div class="col-sm-1">
				<select type="text" class="form-control" id="startMinutesInput" name="startm">
					<option>00</option>
					<option>15</option>
					<option>30</option>
					<option>45</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="endInput" class="col-sm-2 control-label">End</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" id="endInput" name="end" placeholder="2014-12-01">
			</div>
			<div class="col-sm-1">
				<select type="text" class="form-control" id="endHoursInput" name="endh">
					<option>00</option>
					<option>01</option>
					<option>02</option>
					<option>03</option>
					<option>04</option>
					<option>05</option>
					<option>06</option>
					<option>07</option>
					<option>08</option>
					<option selected>09</option>
					<option>10</option>
					<option>11</option>
					<option>12</option>
					<option>13</option>
					<option>14</option>
					<option>15</option>
					<option>16</option>
					<option>17</option>
					<option>18</option>
					<option>19</option>
					<option>20</option>
					<option>21</option>
					<option>22</option>
					<option>23</option>
				</select>
			</div>
			<div class="col-sm-1">
				<select type="text" class="form-control" id="endMinutesInput" name="endm">
					<option>00</option>
					<option selected>15</option>
					<option>30</option>
					<option>45</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="nameInput" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="nameInput" name="name">
			</div>
		</div>
		<div class="form-group">
			<label for="phoneInput" class="col-sm-2 control-label">Phone</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="phoneInput" name="phone">
			</div>
		</div>
		<div class="form-group">
			<label for="emailInput" class="col-sm-2 control-label">Email</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="emailInput" name="email">
			</div>
		</div>
		<div class="form-group">
			<label for="descriptionInput" class="col-sm-2 control-label">Description</label>
			<div class="col-sm-10">
				<textarea class="form-control" id="descriptionInput" name="description"></textarea>
			</div>
		</div>
		<div class="form-group">
			<label for="privacyInput" class="col-sm-2 control-label">Privacy</label>
			<div class="col-sm-10">
				<select class="form-control" id="privacyInput" name="privacy">
					<option value="private">Private</option>
					<option value="public">Public</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="showMeInput" class="col-sm-2 control-label">Show me as</label>
			<div class="col-sm-10">
				<select class="form-control" id="showMeInput" name="showme">
					<option value="busy">Busy</option>
					<option value="free">Free</option>
				</select>
			</div>
		</div>
	</form>
</div>
{% endblock %}